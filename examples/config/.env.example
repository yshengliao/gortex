# Server Configuration
GORTEX_SERVER_PORT=8080
GORTEX_SERVER_ADDRESS=:8080
GORTEX_SERVER_GZIP=true
GORTEX_SERVER_CORS=true

# Logger Configuration
GORTEX_LOGGER_LEVEL=info
GORTEX_LOGGER_ENCODING=json

# JWT Configuration
GORTEX_JWT_SECRET_KEY=your-secret-key-here
GORTEX_JWT_ISSUER=my-app

# Database Configuration
GORTEX_DATABASE_HOST=localhost
GORTEX_DATABASE_PORT=5432
GORTEX_DATABASE_USER=dbuser
GORTEX_DATABASE_PASSWORD=dbpass
GORTEX_DATABASE_DATABASE=myapp

# WebSocket Configuration
GORTEX_WEBSOCKET_MAX_MESSAGE_SIZE=1048576